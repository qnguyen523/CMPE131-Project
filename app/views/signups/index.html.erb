
    <div class="content" >
      <p id="notice"><%= notice %></p>
      <h1>Listing Signups</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Screen name</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Confirm password</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @signups.each do |signup| %>
            <tr>
              <td><%= signup.screen_name %></td>
              <td><%= signup.first_name %></td>
              <td><%= signup.last_name %></td>
              <td><%= signup.email %></td>
              <td><%= signup.password %></td>
              <td><%= signup.confirm_password %></td>
              <td><%= link_to 'Show', signup %></td>
              <td><%= link_to 'Edit', edit_signup_path(signup) %></td>
              <td><%= link_to 'Destroy', signup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Signup', new_signup_path %>
    <!-- end .content --></div>
