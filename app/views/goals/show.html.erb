<div class="content">
  <p id="notice"><%= notice %></p>
  <center>
  <h1 style="padding-bottom: 0px">
  <strong>
  <u>
  <%= @goal.Goal %>
  </u>
  </strong>
  </h1>
  </center>

  <center>
  <p style="line-height:.7">
    <font size="1.3">
    Date Created: <%= @goal.Date %><br>
    </font>
  </p>
  </center>

  <h2 style="margin-bottom:5px">
  <strong>Description:</strong>
  </h2>
  <p>
    <font size="2"><%= @goal.Description %></font>
  </p>
  <h2 style="margin-top:5px">
  <strong>Steps:</strong>
  </h2>
  <p>
    <ol style="margin-bottom:0px; padding-bottom:0px">
      <% @goal.steps.each do |step| %>
      <% if @goal.id == step.goal_id %>
      <li>
        <p>
          <%= step.requirement %> (Estimated Time: <%= step.completionTime %>) <%= link_to 'Edit', edit_goal_step_path(@goal, step) %> | <%= link_to 'Delete', goal_step_path(@goal, step), class: 'delete', method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </li>
      <% end %>
      <% end %>
    </ol>
  </p>
  <p style="font-size: 15px">
    <%= link_to 'Create new Step', new_goal_step_path(@goal) %>
  </p>
  <h2 style="margin-top:5px">
  <center><strong>DUE BY:</strong> <%= @goal.DueDate %></center>
  </h2>
  <%= link_to 'Edit Goal', edit_goal_path(@goal) %> |
  <%= link_to 'Back to Goals', goals_path %>
  <!-- end .content -->
</div>